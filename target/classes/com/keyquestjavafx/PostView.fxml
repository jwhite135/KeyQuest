<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="425.0" prefWidth="653.0" style="-fx-background-color: #E8E0C0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.keyquest.CommentViewController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #E8E0C0;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <ImageView fx:id="logoImageView" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" onMouseClicked="#goToHome">
                <image>
                    <Image url="@images/KeyQuestLogoTransparent.png" />
                </image>
            </ImageView>

            <Button fx:id="homeButton" onMouseClicked="#goToHome" style="-fx-background-color: #A37A38; -fx-text-fill: white;" text="Home" />
            <Button fx:id="checkPostsButton" onMouseClicked="#goToPostsSearch" style="-fx-background-color: #A37A38; -fx-text-fill: white;" text="Check Posts" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" prefHeight="17.0" prefWidth="143.0" text="Welcome, …" />

            <ImageView fx:id="profileImageView" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true" onMouseClicked="#goToProfile">
                <image>
                    <Image url="@images/KeyQuestUserIcon.png" />
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- LEFT: Post details with explicit fx:id labels -->
            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <!-- Generic title label -->
                <Label fx:id="postTitleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <!-- Generic creator label -->
                <Label fx:id="postCreatorLabel" style="-fx-font-style: italic;" />
                <!-- Generic song label -->
                <Label fx:id="songNameLabel" style="-fx-font-weight: bold;" onMouseClicked="#goToPostSong" />

                <!-- scrollable post body -->
                <ScrollPane fx:id="postBodyScroll" fitToWidth="true" prefViewportHeight="180" VBox.vgrow="ALWAYS">
                    <Text fx:id="contentText" wrappingWidth="400" />
                </ScrollPane>
            </VBox>

            <!-- RIGHT: Comments -->
            <VBox alignment="TOP_LEFT" spacing="10" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="COMMENTS" />

                <ScrollPane fx:id="commentsScroll" fitToWidth="true" prefViewportHeight="300" VBox.vgrow="ALWAYS">
                    <VBox fx:id="commentsContainer" spacing="10" style="-fx-background-color: #E0A860;">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </VBox>
                </ScrollPane>

                <TextArea fx:id="commentInput" prefRowCount="4" promptText="Leave a comment…" wrapText="true" VBox.vgrow="ALWAYS" />
                
                <Button fx:id="commentButton" maxWidth="Infinity" onAction="#handleCommentAction" style="-fx-background-color: #A37A38; -fx-text-fill: white;" text="Comment" />
            </VBox>
        </HBox>
    </center>

</BorderPane>
