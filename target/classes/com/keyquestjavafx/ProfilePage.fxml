<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.keyquestjavafx.ProfilePageController">
    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
            <Button fx:id="backButton" text="Back" onAction="#goBack" />
            <Label text="Profile Page" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <!-- Username -->
            <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Bio -->
            <Label fx:id="bioLabel" text="Bio: This is the user's bio." wrapText="true" style="-fx-font-size: 16px;" />

            <!-- Favorite Songs -->
            <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
                <Label text="Favorite Songs:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <ListView fx:id="favoriteSongsList" prefHeight="150" />
            </VBox>

            <!-- Favorite Posts -->
            <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
                <Label text="Favorite Posts:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <ListView fx:id="favoritePostsList" prefHeight="150" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
