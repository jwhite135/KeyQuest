<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.keyquest.CommentViewController">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #E8E0C0;">
            <!-- REPLACED padding="10" with Insets block -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <ImageView fx:id="logoImageView"
                       fitWidth="50" fitHeight="50"
                       pickOnBounds="true"
                       preserveRatio="true"/>
            <Button fx:id="homeButton" text="Home"
                    onAction="#handleHomeAction"
                    style="-fx-background-color: #A37A38; -fx-text-fill: white;"/>
            <Button fx:id="checkPostsButton" text="Check Posts"
                    onAction="#handleCheckPostsAction"
                    style="-fx-background-color: #A37A38; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel" text="Welcome, …"/>
            <ImageView fx:id="profileImageView"
                       fitWidth="40" fitHeight="40"
                       pickOnBounds="true"
                       preserveRatio="true"/>
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <HBox spacing="20">
            <!-- REPLACED padding="20" with Insets block -->
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- LEFT: Post details -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label fx:id="postTitleLabel"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="from"/>
                    <Label fx:id="authorLabel" style="-fx-font-style: italic;"/>
                    <Label text="—"/>
                    <Label fx:id="songLabel" style="-fx-font-weight: bold;"/>
                </HBox>

                <!-- scrollable post body -->
                <ScrollPane fx:id="postBodyScroll"
                            fitToWidth="true"
                            prefViewportHeight="200"
                            VBox.vgrow="ALWAYS">
                    <Text fx:id="contentText"
                          wrappingWidth="400"/>
                </ScrollPane>
            </VBox>

            <!-- RIGHT: Comments -->
            <VBox spacing="10" alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
                <Label text="COMMENTS"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- scrollable comments list -->
                <ScrollPane fx:id="commentsScroll"
                            fitToWidth="true"
                            prefViewportHeight="300"
                            VBox.vgrow="ALWAYS">
                    <VBox fx:id="commentsContainer"
                          spacing="10"
                          style="-fx-background-color: #F5D79A;">
                        <!-- REPLACED padding="10" with Insets block -->
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </ScrollPane>

                <HBox spacing="10">
                    <TextField fx:id="commentInput"
                               promptText="Leave a comment…"
                               HBox.hgrow="ALWAYS"/>
                    <Button fx:id="commentButton"
                            text="Comment"
                            onAction="#handleCommentAction"
                            style="-fx-background-color: #A37A38; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

</BorderPane>