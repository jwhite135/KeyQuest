<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.keyquestjavafx.SongViewController"
      spacing="10">

    <stylesheets>
        <URL value="@com/keyquestjavafx/styles.css" />
    </stylesheets>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <!-- Back Button -->
    <HBox alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="Back" onAction="#onBack" />
    </HBox>

    <!-- Metadata Section -->
    <VBox spacing="5">
        <Label fx:id="titleLabel" text="Title" />
        <Label fx:id="artistLabel" text="Artist" />
        <Label fx:id="genreLabel" text="Genre" />
        <Label fx:id="difficultyLabel" text="Difficulty" />
    </VBox>

    <!-- Instrument Selection -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Instrument:" />
        <ComboBox fx:id="instrumentDropdown" prefWidth="150.0" />
    </HBox>

    <!-- Playback Controls -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="playButton" text="Play" onAction="#onPlay" />
        <Button fx:id="muteButton" text="Mute" onAction="#onMute" />
        <Button fx:id="loopButton" text="Loop" onAction="#onToggleLoop" />
    </HBox>

    <!-- Scrollable Measure Display -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="sheetMusicContainer" spacing="20" />
        </content>
    </ScrollPane>
</VBox>
