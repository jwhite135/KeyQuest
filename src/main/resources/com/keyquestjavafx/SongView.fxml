<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.keyquestjavafx.SongViewController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <!-- Navigation Bar - Compact at the top -->
    <VBox alignment="TOP_CENTER" spacing="5" styleClass="form-container">
        <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
        </padding>
        
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="usernameLabel" text="Welcome, User" />
            <!-- Profile picture instead of home button -->
            <ImageView fx:id="profilePicButton" fitHeight="30" fitWidth="30" onMouseClicked="#goToProfile" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/KeyQuestUserIcon.png" />
            </ImageView>
        </HBox>
        
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="searchSongButton" onAction="#goToPlaySong" text="Search Songs" />
            <Button fx:id="makeSongButton" onAction="#goToMakeSong" text="Make a Song" />
            <Button fx:id="checkPostsButton" onAction="#goToCheckPosts" text="Check Posts" />
        </HBox>
    </VBox>

    <!-- Song Metadata -->
    <VBox spacing="5">
        <Label fx:id="titleLabel" text="Title" />
        <Label fx:id="artistLabel" text="Artist" />
        <Label fx:id="genreLabel" text="Genre" />
        <Label fx:id="difficultyLabel" text="Difficulty" />
    </VBox>

    <!-- Scrollable Sheet Music -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="sheetMusicContainer" spacing="20" />
        </content>
    </ScrollPane>

    <!-- Instrument & Playback Controls -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Instrument:" />
        <ComboBox fx:id="instrumentDropdown" prefWidth="150.0" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="playButton" onAction="#onPlay" text="Play" />
        <Button fx:id="muteButton" onAction="#onMute" text="Mute" />
        <Button fx:id="loopButton" onAction="#onToggleLoop" text="Loop" />
        <Button fx:id="backButton" onAction="#onBack" text="Back" />
    </HBox>

</VBox>
